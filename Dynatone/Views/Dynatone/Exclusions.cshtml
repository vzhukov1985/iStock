@{
    ViewData["Title"] = "Прайс-лист Dynatone";
}
<div class="container-fluid px-5" style="height:100vh;">
    <form>
        <div class="form-row">
            <div class="form-group col-sm-6">
                <label for="Items"><b>Исключить ТОВАРЫ по ID (каждый ID с новой строки):</b></label>
                <textarea id="Items" class="form-control" rows="19"></textarea>
            </div>
            <div class="form-group col-sm-6">
                <label for="Groups"><b>Исключить ГРУППЫ по ID (каждый ID с новой строки):</b></label>
                <textarea id="Groups" class="form-control" rows="19"></textarea>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <button type="button" id="btnSave" class="btn btn-primary mr-3">Сохранить</button>
            </div>
            <div class="form-group">
                <button type="button" id="btnBack" class="btn btn-danger mr-3">Назад</button>
            </div>

        </div>
    </form>
</div>


@section Scripts
{
    <script>
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "Exclusions/get",
                success: function (response) {
                    $('#Items').val(response.excludeItems);
                    $('#Groups').val(response.excludeGroups);
                },
                error: function (errormessage) {
                    alert("Неизвестная ошибка " + errormessage);
                }
            });

        });

        $('#btnSave').on('click', function () {
            $.ajax({
                type: "POST",
                url: "Exclusions/save",
                data: JSON.stringify({ items: $('#Items').val(), groups: $('#Groups').val()}),
                contentType: "application/json;charset=utf-8",
                success: function (response) {
                    window.history.back();
                },
                error: function (errormessage) {
                    alert("Неизвестная ошибка " + errormessage);
                }
            });
        });

        $('#btnBack').on('click', function () {
            if (confirm('ВНИМАНИЕ! Изменения не будут сохранены! Действительно перейти назад?')) {
                window.history.back();
            }
        })
    </script>
}
